<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Category List</h2>
  <a href="/category/add" class="btn btn-primary">Thêm</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Img</th>
      <th scope="col">Name</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    {{#each categorys}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td><img
            src="{{this.CateImg}}"
            alt="Category Image"
            style="width: 100px; height: auto;"
          /></td>
        <td>{{this.CateName}}</td>
        <td>
          <a href="/category/{{this._id}}/edit" class="btn btn-link">Sửa</a>
          <form
            action="/category/{{this._id}}"
            method="POST"
            style="display:inline-block;"
          >
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-danger">Xóa</button>
          </form>
        </td>

      </tr>
    {{/each}}
  </tbody>
</table>